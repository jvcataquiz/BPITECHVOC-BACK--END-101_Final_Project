<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="/js/jquery.js"></script>
    <link rel="stylesheet" href="/style.css">
    <title>Name of Profile</title>
    <style>
    label{
        text-align: left;
    }
    </style>
</head>

<body style="background-color: #a7d6b8;">
    <%- include('navbar') %>
    <h1 style="margin-left: 5%; margin-top: 1rem;">Profile Page:</h1>


        <div class="user">
           
            <div class="userinfoupdate">
               
                <h1>Password Update</h1>
                <div class="updateinfo">
                    <form action="/update-user/<%= result._id%>?_method=PATCH" method="post">
                        <label for="email">Email:</label><br>
                        <input type="textarea" name="email" id="mail" value="<%= result.email%>" readonly> <br>
                        <label for="fullname">Fullname: </label><br>
                        <input type="textarea" name="fullname" id="mail" value="<%=result.fullname%>"> <br>
                        <label for="pwd">Password: </label><br>
                        <input type="textarea" name="pwd" id="search" placeholder="Enter Password...." value="<%=result.pwd%>"> <br>
                     
                        <button class="signin">Update</button>
                    </form>
                </div>
           
            </div>
      
            <div class="userpost">
                <h1 style="text-align: left; margin-left: 3%;">All Post</h1>
                <br>
                <% if(datas != 0 ){ %>
                <% for(let data of datas.sort().reverse()){ %>
                <div class="userlist">

                    <div class="">
                        <div class="img">
                            <img src="<%=data.rentalImage%>" alt="">
                            </div>
                            <br>
                        <h2> â‚± <%= data.price %> </h2>
                        <h6 class="title"><%= data.fullname %> </h6>
                        <div class="address">
                            <p><%= data.address%> </p>
                        </div>
                        <div class="row">
                            <p class="dateposted"><%= data.date.toLocaleDateString() %> </p>
                            <p class="title reviews"><%= data.comments.length %> Reviews</p>

                        </div>
                        <div class="forms">
                           
                            <a href="/rental/<%= data._id %>"> View</a>
                            <a href="/updaterental/<%=data._id%>"><%=data._id%></a>


                            <form action="/rental/<%= data._id%>?_method=DELETE" method="post">
                                <button>Delete</button>
                            </form>

                        </div>

                    </div>
                </div>
                <br>
                <% }}else{ %>
                    <h2>No Records</h2>
                    <% } %>






            </div>

        </div>

        <%- include('footer') %> 
</body>

</html>